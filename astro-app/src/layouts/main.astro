---
const { frontmatter } = Astro.props;
const { title, prev, next } = frontmatter;
import '../styles/global.css';
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body class="w-full min-h-screen flex flex-col items-center pt-24 pb-8 overflow-x-hidden
    bg-gray-100">
    <!-- Header fijo con degradado idéntico al index -->
    <header class="fixed top-0 left-0 w-full bg-gradient-to-r from-purple-800 via-indigo-700 to-blue-600 text-white h-16 flex items-center justify-center shadow-lg z-20">
      <h1 class="text-lg md:text-2xl font-semibold tracking-wide uppercase">{title}</h1>
    </header>

    <!-- Contenido centrado en tarjeta estilizada y coordinada -->
    <main class="flex-1 w-full flex items-center justify-center px-4">
      <div class="relative w-full max-w-3xl bg-white/20 backdrop-blur-md rounded-3xl shadow-2xl p-8 md:p-12 space-y-6
        transform transition-transform duration-300 hover:scale-105 animate-fadeIn">
        <slot />
      </div>

      <!-- Navegación lateral con flechas en tono púrpura -->
      {prev && (
        <a href={prev} aria-label="Anterior" class="absolute left-4 top-1/2 transform -translate-y-1/2 p-3 bg-white/90 rounded-full shadow-lg
          hover:scale-110 transition duration-200 animate-fadeIn delay-100">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
      )}
      {next && (
        <a href={next} aria-label="Siguiente" class="absolute right-4 top-1/2 transform -translate-y-1/2 p-3 bg-white/90 rounded-full shadow-lg
          hover:scale-110 transition duration-200 animate-fadeIn delay-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      )}
    </main>

    <!-- Keyframes Animations -->
    <style>
      @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
      .animate-fadeIn { animation: fadeIn 0.5s ease-out both; }
    </style>
  </body>
</html>
