---
const { frontmatter } = Astro.props;
const { title, prev, next } = frontmatter;
import '../styles/global.css';
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>

  <body class="min-h-screen flex flex-col bg-gray-100 overflow-x-hidden">
    <!-- Header fijo -->
    <header
      class="
        fixed top-0 left-0 w-full h-16
        bg-gradient-to-r from-purple-800 via-indigo-700 to-blue-600
        text-white flex items-center justify-center
        shadow-lg z-20
      "
    >
      <h1 class="text-xl sm:text-2xl md:text-3xl font-semibold uppercase">
        {title}
      </h1>
    </header>

    <!-- Main: empieza debajo del header (pt-16) y centra todo -->
    <main
      class="
        flex-1 relative flex items-center justify-center
        pt-16 px-4 sm:px-6 md:px-8
      "
    >
      <!-- Tarjeta centrada -->
      <div
        class="
          relative w-full max-w-md sm:max-w-lg md:max-w-2xl lg:max-w-3xl
          bg-white/20 backdrop-blur-md rounded-3xl shadow-xl
          p-6 sm:p-8 md:p-10 lg:p-12
          space-y-6
          transform transition-transform duration-300 hover:scale-105
          animate-fadeIn
        "
      >
        <slot />
      </div>

      <!-- Flecha anterior -->
      {prev && (
        <a
          href={prev}
          aria-label="Anterior"
          class="
            absolute left-2 sm:left-4 md:left-6
            top-1/2 transform -translate-y-1/2
            bg-white/90 p-2 sm:p-3 md:p-4
            rounded-full shadow-md
            hover:scale-110 transition
          "
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 sm:h-6 sm:w-6 text-purple-700"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
      )}

      <!-- Flecha siguiente -->
      {next && (
        <a
          href={next}
          aria-label="Siguiente"
          class="
            absolute right-2 sm:right-4 md:right-6
            top-1/2 transform -translate-y-1/2
            bg-white/90 p-2 sm:p-3 md:p-4
            rounded-full shadow-md
            hover:scale-110 transition
          "
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 sm:h-6 sm:w-6 text-purple-700"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      )}
    </main>

    <!-- Animaciones -->
    <style>
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .animate-fadeIn {
        animation: fadeIn 0.5s ease-out both;
      }
    </style>
  </body>
</html>
