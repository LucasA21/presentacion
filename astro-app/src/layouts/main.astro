---
const { frontmatter } = Astro.props;
const { title, prev, next } = frontmatter;
import '../styles/global.css';
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body
    class="
      w-full min-h-screen flex flex-col items-center
      pt-20 sm:pt-24 pb-6 sm:pb-8 overflow-x-hidden
      bg-gray-100
    "
  >
    <!-- Header fijo con degradado idéntico al index -->
    <header
      class="
        fixed top-0 left-0 w-full
        bg-gradient-to-r from-purple-800 via-indigo-700 to-blue-600
        text-white flex items-center justify-center
        shadow-lg z-20
        h-14 sm:h-16 md:h-20
      "
    >
      <h1 class="text-base sm:text-lg md:text-xl lg:text-2xl font-semibold tracking-wide uppercase">
        {title}
      </h1>
    </header>

    <!-- Contenido centrado en tarjeta estilizada y coordinada -->
    <main
      class="
        flex-1 w-full flex items-center justify-center
        px-4 sm:px-6 md:px-8 lg:px-10
      "
    >
      <div
        class="
          relative
          w-[90%] max-w-sm sm:max-w-md md:max-w-lg lg:max-w-3xl
          bg-white/20 backdrop-blur-md rounded-3xl shadow-2xl
          p-6 sm:p-8 md:p-10 lg:p-12
          space-y-4 sm:space-y-6 md:space-y-8
          transform transition-transform duration-300 hover:scale-105
          animate-fadeIn
        "
      >
        <slot />
      </div>

      <!-- Navegación lateral con flechas en tono púrpura -->
      {prev && (
        <a
          href={prev}
          aria-label="Anterior"
          class="
            absolute left-2 sm:left-4 md:left-6
            top-1/2 transform -translate-y-1/2
            p-2 sm:p-3 md:p-4
            bg-white/90 rounded-full shadow-lg
            hover:scale-110 transition duration-200
            animate-fadeIn delay-100
          "
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-purple-700"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </a>
      )}
      {next && (
        <a
          href={next}
          aria-label="Siguiente"
          class="
            absolute right-2 sm:right-4 md:right-6
            top-1/2 transform -translate-y-1/2
            p-2 sm:p-3 md:p-4
            bg-white/90 rounded-full shadow-lg
            hover:scale-110 transition duration-200
            animate-fadeIn delay-200
          "
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 sm:h-6 sm:w-6 md:h-7 md:w-7 text-purple-700"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      )}
    </main>

    <!-- Keyframes Animations -->
    <style>
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      .animate-fadeIn {
        animation: fadeIn 0.5s ease-out both;
      }
    </style>
  </body>
</html>
